    <!-- question 1 -->
    <string name="question_1">Q1: You have just witnessed a patient collapse.
        They are not breathing. A second rescuer arrives. The second rescuers role is to:</string>
    <string name="answer_1a_correct">
       A) Activate the Emergency Response System and get the AED.</string>
    <string name="answer_1b_wrong">B) Check for a pulse.</string>
    <string name="answer_1c_wrong">C) Begin ventilating the patient.</string>
    <string name="answer_1d_wrong">D) Automatically begin chest compressions.</string>

    <!-- question 2 -->
    <string name="question_2">Q2: When feeling for a pulse, use:</string>
    <string name="answer_2a_wrong">A) Your Thumb and 1 finger.</string>
    <string name="answer_2b_wrong">B) 1 finger only.</string>
    <string name="answer_2c_correct">C) 2 or 3 fingers.</string>
    <string name="answer_2d_wrong">D) Just your Thumb.</string>

    <!-- question 3 -->
    <string name="question_3">Q3: Which of the following signs are likely to be present in a
        patient with a severe airway obstruction:</string>
    <string name="answer_3a_correct">A) Inability to speak.</string>
    <string name="answer_3b_correct">B) Cyanosis.</string>
    <string name="answer_3c_wrong">C) Violent coughing.</string>
    <string name="answer_3d_correct">D) Clutching the neck.</string>

    <!-- question 4 -->
    <string name="question_4">Q4: A round of CPR should last 5 cycles or approximately:</string>
    <string name="answer_4a_wrong">A) 3 minutes.</string>
    <string name="answer_4b_correct">B) 2 minutes.</string>
    <string name="answer_4c_wrong">C) 5 minutes.</string>
    <string name="answer_4d_wrong">D) 4 minutes.</string>

    <!-- question 5 -->
    <string name="question_5">Q5: Which of the following are true of an agonal gasp:</string>
    <string name="answer_5a_wrong">A) They are always forceful and make the patients head move.</string>
    <string name="answer_5b_correct">B) They look as if the patient is drawing in air rapidly.</string>
    <string name="answer_5c_correct">C) They usually happen at a slow rate.</string>
    <string name="answer_5d_correct">D) They may sound like a snort or grunt.</string>

    <!-- question 6 -->
    <string name="question_6">Q6: Which of the following is considered to be an early sign of
        Hypoxia:</string>
    <string name="answer_6a_wrong">A) Loss of coordination.</string>
    <string name="answer_6b_wrong">B) Sleepy appearance.</string>
    <string name="answer_6c_wrong">C) Head bobbing.</string>
    <string name="answer_6d_correct">D) Disorientation.</string>

    <!-- question 7-->
    <string name="question_7">Q7: 2 rescuer CPR is performed at a ratio of what on a child:</string>
    <string name="answer_7a_wrong">A) 30 to 2.</string>
    <string name="answer_7b_correct">B) 15 to 2.</string>
    <string name="answer_7c_wrong">C) 30 to 1.</string>
    <string name="answer_7d_wrong">D) 15 to 1.</string>

    <!-- question 8 -->
    <string name="question_8">Q8: You are performing abdominal thrusts on a patient who becomes
        unresponsive, the very first thing you should do is:</string>
    <string name="answer_8a_correct">A) Activate the Emergency Response System.</string>
    <string name="answer_8b_wrong">B) Check for a pulse.</string>
    <string name="answer_8c_wrong">C) Begin chest compressions.</string>
    <string name="answer_8d_wrong">D) Begin Ventilations.</string>

    <!-- question 9 -->
    <string name="question_9">Q9: The forces that caused a injury are often referred to as The _________ of Injury.</string>
    <string name="answer_question_9">Mechanism</string>

    <!-- question 10 -->
    <string name="question_10">Q10: Providing care to a seriously injured unconscious adult is a example of ________ Consent.</string>
    <string name="answer_question_10">Implied</string>

